---
import { sanityClient } from 'sanity:client'
import LayoutStudio from "../../../../layouts/LayoutStudio.astro";

interface Props {
    content: any
}

export async function getStaticPaths() {
    const projects = await sanityClient.fetch(`*[_type == "type_project" && brand->name == "Studio"]`)
    return projects.map((project) => {
        return {
            params: { project: project.slug.current },
            props: { content: project }
        }
    })
}

const { content } = Astro.props
---
<LayoutStudio
    title="Work"
>
    <h1>{content.title}</h1>
</LayoutStudio>