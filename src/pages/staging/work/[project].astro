---
import { sanityClient } from 'sanity:client'
import LayoutDomaine from '../../../layouts/LayoutDomaine.astro';
import { paths } from '../../../components/global/utils/paths';
import WorkPostHero from '../../../components/domaine/sections/work/workPost_Hero.astro';

interface Props {
    content: any
}

export async function getStaticPaths() {
    const projects = await sanityClient.fetch(`*[_type == "type_project" && agencyBrand->name == "Domaine"] { ..., industry->{...}, mux{ asset-> playbackId, assetId, filename} }`)
    return projects.map((project) => {
        return {
            params: { project: project.slug.current },
            props: { content: project }
        }
    })
}

const { content } = Astro.props
console.log(content.mux)
---
<LayoutDomaine
    title={content.title}
>
    <WorkPostHero
        heading={content.title}
        category={content.industry}
        root={paths.root.projects.path}
    />
</LayoutDomaine>