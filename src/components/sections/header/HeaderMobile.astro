---
import { getHeaderContent } from "../../../utils/sanityClient";
import Icon from '../../atoms/Icon.astro';

const data = await getHeaderContent();
// console.log(data)
---

<header class="header" data-animate="true">
  <a class="logo" href="/" aria-label="Domaine homepage">
    <Icon glyph="logo" />
  </a>
  <a class="button contact-button" href={data[0].buttonURL}>
    <Icon glyph="email" size="large" />
  </a>
</header>

<div class="navigation">
  <nav class="navigation-links">
    {data[0].links.map((link, i) => {
      return (
        <a class="navigation-link" href={link.linkURL}>{link.linkText}</a>
      )
    })}
  </nav>
</div>


<script>

  const animateLoad = () => {
    const heroSection = document.querySelector('.header')
    if (heroSection instanceof HTMLElement ) {
      heroSection.dataset.animate = "false";
    }
  }

  document.addEventListener("astro:after-swap", () => {
    animateLoad()
  })

  document.addEventListener("astro:page-load", () => {
    animateLoad()
  })
</script>

<style>

  .header {
    display: none;
  }

  .navigation-links {
    display: none;
  }

  @media screen and (max-width:678px) {

    .header {
      display: flex;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      padding: var(--space-sm) var(--page-margin);
      position: fixed;
      top: 0;
      z-index: 99;
      width: 100%;
      translate: 0 0;
      transition: top var(--anim-md);
    }

    /* .header[data-animate="true"] {
      top: -100%;
    } */

    .logo {
      width: clamp(100px, 8vw, 220px);
    }

    .logo svg {
      width: 100%;
    }

    .navigation {
      width: 100%;
      padding: 0 var(--page-margin) var(--space-lg);
      position: fixed;
      bottom: 0;
      z-index: 99;
      display: flex;
      flex-direction: column;
      justify-content: flex-start;
      align-items: center;
    }

    .navigation-links {
      border: 1px solid var(--color-border);
      border-radius: var(--radius-rounded);
      display: flex;
      flex-direction: row;
      justify-content: stretch;

      overflow: hidden;
    }

    .navigation-link {
      flex: 1 0 auto;
      display: flex;
      justify-content: center;
      align-items: center;
      background: var(--color-background);
      border-left: 1px solid var(--color-border);
      color: var(--color-foreground);
      padding: var(--space-xs) var(--space-sm);
      transition: background var(--anim-sm), color var(--anim-sm);
    }

    .navigation-link:hover {
      background: var(--color-foreground);
      color: var(--color-background);
    }

    .navigation-link:first-child {
      padding-left: var(--space-lg);
      border-left: none;
    }

    .navigation-link:last-child {
      padding-right: var(--space-lg);
    }

    .contact-button {
      padding: var(--space-xs);
    }

  }

</style>