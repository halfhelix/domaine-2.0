---
import { urlFor } from "../../../utils/sanityClient"
const { content } = Astro.props;
console.log(content.media)

const media = [...content.media, ...content.media]
---
<section class="media-grid">
  <div class="media-row">
    {media.map((asset) => {
      return (
        <img 
          class="image-media"
          src={urlFor(asset.image).url()}
        />
      )
    })}
  </div>
</section>

<style>
  .media-grid {
    overflow-x: hidden;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
  }

  .media-row {
    display: flex;
    flex-direction: row;
    justify-content: stretch;
    gap: var(--space-md);
    padding: 0 var(--space-md);
    width: fit-content;
    /* translate: 0 0; */
    /* animation: scroll 10s linear 0s infinite; */
    /* translate: -50% 0; */
    translate: -10% 0;
  }

  @keyframes scroll {
    from: {
      translate: 0% 0;
    }
    to: {
      translate: calc(100% - 100vw ) 0;
    }
  }

  .image-media {
    /* width: 20%; */
    flex: 0 0 30vw;
    min-width: 0;
    border-radius: var(--radius-sm);
  }
</style>